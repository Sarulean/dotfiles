export git_concise_log_format='--pretty=format:%Cblue%h%d%Creset %cr %Cgreen%an%Creset %s'

alias ga='git add $argv'
alias gab='gm $argv && gbr -d $argv'
alias gap='ga -p $argv'
alias gau='git add -u $argv'
alias gbr='git branch -v $argv'
alias gc='git commit -v $argv'
alias gca='gc -a $argv'
alias gcam='gca --amend $argv'
alias gcf='git config -l'
alias gch='git cherry-pick'
alias gcm='gc --amend $argv'
alias gco='git checkout $argv'
alias gcop='gco -p $argv'
alias gd='git diff -M $argv'
alias gd.='git diff -M --color-words="." $argv'
alias gdc='git diff --cached -M $argv'
alias gdc.='git diff --cached -M --color-words="." $argv'
alias gdcw='git diff --cached $color_ruby_words $argv'
alias gds='gitd --stat $argv'
alias gdw='git diff $color_ruby_words $argv'
alias gf='git fetch $argv'
alias gfo='git fetch origin'
alias git='/Users/ben/code/git-achievements/git-achievements $argv'
alias gl='git log --graph $git_concise_log_format $argv'
alias glv='gl -p $argv'
alias gm='git merge --no-ff $argv'
alias gmd='gm $argv && gbr -d $argv $argv && glcg'
alias gp='git push $argv'
alias gpb='git push banana $argv'
alias gpd='gp deploy deploy $argv'
alias gpo='git push origin $argv'
alias gpom='git push origin master $argv'
alias gpt='gp --tags $argv'
alias gr='git reset $argv'
alias graf='git remote add $argv[1] $argv[2] && gf $argv[1]'
alias grb='git rebase $argv'
alias grbc='git rebase --continue $argv'
alias grbi='grb -i $argv'
alias grh='git reset --hard $argv'
alias grl='git reflog $argv'
alias grp='gr --patch $argv'
alias grs='git reset --soft $argv'
alias grsh='git reset --soft HEAD~ $argv'
alias grv='git remote -v $argv'
alias gs='git show $argv'
alias gss='gs --stat $argv'
alias gst='git stash $argv'
alias gstp='git stash pop $argv'
alias gstwc='gst save --keep-index $argv'
